<div class="cocktail-card d-flex justify-content-between">

      <div class="ingredients-card">
        <p> Description:
        </p>
        <% @cocktail.doses.each do |dose| %>
        <%= dose.description %> <%= dose.ingredient.name %> <br>
        <% end %>

        <%= link_to 'Back', cocktails_path, class: "btn btn-primary card-link w-50 my-2" %>
        <%= link_to '+ Add Dose', new_cocktail_dose_path(@cocktail), class: "btn btn-primary card-link w-50 my-2" %>
      </div>


      <div class="cocktail-img">
        <img src="https://loremflickr.com/320/240/" alt="">
        <h1><%= @cocktail.name %></h1>
      </div>


  </div>

